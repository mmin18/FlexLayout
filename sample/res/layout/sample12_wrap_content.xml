<?xml version="1.0" encoding="utf-8"?>
<com.github.mmin18.widget.FlexLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="200dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:text="layout_width=min(wrap_content,100%-this.left-next.width)"
		app:layout_centerX="50%"
		app:layout_top="20dp"/>

	<TextView
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:text="Short text"
		app:layout_left="10dp"
		app:layout_top="prev.bottom+20dp"
		app:layout_width="min(wrap_content,100%-this.left-next.width)"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:src="@android:drawable/ic_dialog_info"
		app:layout_centerY="prev.centerY"
		app:layout_left="prev.right"/>

	<TextView
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:text="Long text long text long text long text long text long text long text long text long text long text"
		app:layout_left="10dp"
		app:layout_top="prev.bottom+20dp"
		app:layout_width="min(wrap_content,100%-this.left-next.width)"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:src="@android:drawable/ic_dialog_info"
		app:layout_centerY="prev.centerY"
		app:layout_left="prev.right"/>

</com.github.mmin18.widget.FlexLayout>